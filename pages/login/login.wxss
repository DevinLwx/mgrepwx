.ivu-card {
  background: #fff;
  border-radius: 4px;
  transition: all 0.2s ease-in-out;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -60%);
  border: 1px solid #f1f1f1;
  font-size: 14px;
  padding: 8px;
}

.ivu-card .ivu-card-head {
  border-bottom: 1px solid #e8eaec;
  padding: 14px 16px;
  line-height: 1;
}

.weui-cells {
  font-size: 14px;
  margin-top: 0;
}
.weui-cell {
  padding: 12px 16px;
}
.weui-cells:before{
  display: none;
}
.footer {
  margin-top: 10px;
}
